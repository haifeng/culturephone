.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:connections, :index)
      %li.active=link_to pat(:new), url(:connections, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:connection)
    .inner
      -form_for :connection, url(:connections, :create), :class => :form do |f|
        =partial "connections/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")